<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.options"
    android:orientation="vertical">
    <include layout="@layout/toolbar" />


    <Button
        android:id="@+id/slotbutton"

        android:layout_width="136dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="Slot Booking "
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="260dp" ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Grocery Checking"
        android:id="@+id/grocerybutton"
        android:layout_marginTop="20dp"></Button>

</LinearLayout>